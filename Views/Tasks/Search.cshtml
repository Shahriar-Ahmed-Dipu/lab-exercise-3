@model IEnumerable<WebApplication15.Areas.ProjectManagement.Models.ProjectTask>

<h2>Task Search Results</h2>

@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <!-- Add other columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <!-- Display other properties as needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tasks found.</p>
}
